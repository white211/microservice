<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.white.userserver.mapper.TbUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.white.userserver.pojo.entity.TbUser">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="sex" property="sex" />
        <result column="age" property="age" />
        <result column="email" property="email" />
        <result column="sort" property="sort" />
        <result column="enable_flag" property="enableFlag" />
        <result column="enable_begin" property="enableBegin" />
        <result column="enable_end" property="enableEnd" />
        <result column="create_time" property="createTime" />
        <result column="create_by" property="createBy" />
        <result column="last_update_time" property="lastUpdateTime" />
        <result column="last_update_by" property="lastUpdateBy" />
        <result column="comments" property="comments" />
        <result column="version" property="version" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, username, password, sex, age, email, sort, enable_flag AS enableFlag, enable_begin AS enableBegin, enable_end AS enableEnd, create_time AS createTime, create_by AS createBy, last_update_time AS lastUpdateTime, last_update_by AS lastUpdateBy, comments, version, status
    </sql>

    <resultMap id="ResourceMap" type="com.white.userserver.pojo.entity.TbResource">
        <id column="id" property="id" />
        <result column="path" property="path" />
    </resultMap>

    <select id="getResource" parameterType="com.white.userserver.pojo.entity.TbUser" resultMap="ResourceMap">
      SELECT
        r.path
    FROM tb_resource r
    INNER JOIN tb_role_resource rr ON rr.resource_id = r.id AND rr.status = 1
    INNER JOIN tb_role rl ON rl.id = rr.role_id AND rl.`status` = 1
    INNER JOIN tb_user_role ur ON ur.role_id = rl.id AND ur.`status` = 1
    INNER JOIN tb_user u ON u.id = 1
    WHERE r.`status` = #{id}
    GROUP BY r.id
    ORDER BY r.create_time DESC;
    </select>

</mapper>
